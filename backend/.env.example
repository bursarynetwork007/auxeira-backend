# Auxeira SSE Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
BACKEND_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
# Railway automatically provides DATABASE_URL, but you can override individual settings
DATABASE_URL=postgresql://username:password@localhost:5432/auxeira_db

# Individual database settings (optional if DATABASE_URL is provided)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=auxeira_db
DB_USER=postgres
DB_PASSWORD=password

# Database pool settings
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# =============================================================================
# REDIS CONFIGURATION (Caching & Sessions)
# =============================================================================
# Railway automatically provides REDIS_URL, but you can override individual settings
REDIS_URL=redis://localhost:6379

# Individual Redis settings (optional if REDIS_URL is provided)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis connection settings
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100

# =============================================================================
# JWT & AUTHENTICATION
# =============================================================================
JWT_SECRET=auxeira_super_secret_jwt_key_2025_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Password hashing
BCRYPT_ROUNDS=12

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Login security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# reCAPTCHA (for registration/login protection)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# =============================================================================
# OPENAI INTEGRATION (AI Mentorship)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# =============================================================================
# STRIPE PAYMENT INTEGRATION
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@auxeira.com

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
COMPANY_NAME=Auxeira
SUPPORT_EMAIL=support@auxeira.com

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=debug
LOG_TO_FILE=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true to enable additional debugging features
DEBUG_MODE=false

# Set to true to seed database with sample data
SEED_DATABASE=false

# =============================================================================
# RAILWAY SPECIFIC SETTINGS
# =============================================================================
# These are automatically set by Railway, but you can override them

# Railway provides these automatically:
# DATABASE_URL - PostgreSQL connection string
# REDIS_URL - Redis connection string
# PORT - Application port

# Railway deployment settings
RAILWAY_ENVIRONMENT=production

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# File upload settings (if using cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=auxeira-uploads

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
ENABLE_AI_MENTORSHIP=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PARTNERSHIP_MATCHING=true

# =============================================================================
# SSE SCORING CONFIGURATION
# =============================================================================
# Default weights for SSE scoring (should sum to 1.0)
SSE_SOCIAL_WEIGHT=0.40
SSE_SUSTAINABILITY_WEIGHT=0.35
SSE_ECONOMIC_WEIGHT=0.25

# Scoring update frequency (in minutes)
SSE_SCORE_UPDATE_INTERVAL=60

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WEBSOCKET_CORS_ORIGIN=http://localhost:3001
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database backup settings
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit the actual .env file to version control
# 2. Use strong, unique passwords and secrets in production
# 3. Railway automatically provides DATABASE_URL and REDIS_URL
# 4. Update JWT_SECRET to a strong, random value in production
# 5. Get your OpenAI API key from https://platform.openai.com/
# 6. Get your Stripe keys from https://dashboard.stripe.com/
# 7. Configure your email provider's app password for EMAIL_PASSWORD

# Solana Configuration
SOLANA_NETWORK=devnet
RPC_ENDPOINT=https://api.devnet.solana.com
PROGRAM_ID=AUXeira1111111111111111111111111111111111
AUX_MINT_ADDRESS=YOUR_AUX_MINT_ADDRESS_HERE

# Backend Signing Key (Ed25519 private key in hex format)
SIGNER_PRIVATE_KEY=your_64_char_hex_private_key_here

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_here_make_it_long_and_random

# API Integrations
HUBSPOT_API_KEY=your_hubspot_api_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
QUICKBOOKS_ACCESS_TOKEN=your_quickbooks_access_token
QB_COMPANY_ID=your_quickbooks_company_id

# Database (if using)
DATABASE_URL=postgresql://user:password@localhost:5432/auxeira
