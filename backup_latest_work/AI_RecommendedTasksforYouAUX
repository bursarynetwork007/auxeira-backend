ðŸ”§ SIMPLIFIED BACKEND INTEGRATION
javascript
// Optimized task generator for your UI
async function generateUITasks(startupProfile, externalContext) {
  const prompt = `
CONTEXT:
You are a Startup Growth Strategist AI generating tasks for AuxEira's UI.

STARTUP PROFILE:
- Startup: ${startupProfile.name}
- Current SSE: ${startupProfile.sse} 
- Target SSE: ${startupProfile.targetSse}
- Stage: ${startupProfile.stage}
- MRR: ${startupProfile.mrrTrend}
- Recent Milestones: ${startupProfile.milestones}

EXTERNAL CONTEXT:
${externalContext}

Generate exactly 5 tasks following the UI format requirements and JSON structure.
  `;

  try {
    const response = await callAIModel(prompt);
    const tasks = JSON.parse(response);
    
    // Simple stage-based reward adjustment
    return adjustRewardsByStage(tasks, startupProfile.stage);
  } catch (error) {
    return getFallbackUITasks(startupProfile.stage);
  }
}

function adjustRewardsByStage(tasks, stage) {
  const multipliers = { 'pre_seed': 0.9, 'seed': 1.0, 'series_a': 1.2, 'series_b_plus': 1.4 };
  const multiplier = multipliers[stage] || 1.0;
  
  tasks.recommended_tasks = tasks.recommended_tasks.map(task => ({
    ...task,
    aux_reward: Math.round(task.aux_reward * multiplier)
  }));
  
  return tasks;
}

function getFallbackUITasks(stage) {
  const baseTasks = {
    "recommended_tasks": [
      {
        "title": "Customer Discovery (5+ Interviews)",
        "description": "Conduct customer interviews to validate core value proposition and gather investor testimonials.",
        "due_in_days": 7,
        "impact_type": "SSE",
        "impact_value": 12,
        "difficulty": "Medium",
        "aux_reward": 400
      },
      {
        "title": "Financial Model Update",
        "description": "Refresh financial projections with current metrics, unit economics, and growth assumptions.",
        "due_in_days": 5,
        "impact_type": "Funding Readiness", 
        "impact_value": 10,
        "difficulty": "Hard",
        "aux_reward": 500
      },
      {
        "title": "Investor Pitch Deck",
        "description": "Create or update investor pitch deck with latest traction, team, and market data.",
        "due_in_days": 10,
        "impact_type": "Funding Readiness",
        "impact_value": 8,
        "difficulty": "Medium",
        "aux_reward": 350
      },
      {
        "title": "Customer Reference Program",
        "description": "Identify and prepare 3 reference customers for investor conversations.",
        "due_in_days": 14,
        "impact_type": "SSE",
        "impact_value": 6,
        "difficulty": "Easy", 
        "aux_reward": 280
      },
      {
        "title": "Market Analysis Report",
        "description": "Research target market size, growth trends, and competitive positioning.",
        "due_in_days": 21,
        "impact_type": "SSE",
        "impact_value": 5,
        "difficulty": "Medium",
        "aux_reward": 320
      }
    ]
  };
  
  return adjustRewardsByStage(baseTasks, stage);
}
ðŸŽ¨ DIRECT UI MAPPING
javascript
// How to map AI output to your exact UI structure
function mapToUI(tasks) {
  return tasks.recommended_tasks.map(task => ({
    // Your exact UI fields
    title: task.title,
    description: task.description, 
    dueText: `Due in ${task.due_in_days} days`,
    impactText: `Boosts ${task.impact_type} by +${task.impact_value}%`,
    difficulty: task.difficulty,
    reward: `+${task.aux_reward}`,
    
    // Additional data for your "Start Activity" button
    taskId: generateTaskId(),
    category: getCategoryFromTitle(task.title),
    estimatedHours: getEstimatedHours(task.difficulty)
  }));
}

function getEstimatedHours(difficulty) {
  const hours = { 'Easy': 2, 'Medium': 5, 'Hard': 12 };
  return hours[difficulty];
}

function getCategoryFromTitle(title) {
  if (title.includes('Interview') || title.includes('Customer')) return 'Validation';
  if (title.includes('Financial') || title.includes('Pitch') || title.includes('Investor')) return 'Funding';
  return 'Growth';
}
