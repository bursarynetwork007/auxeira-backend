    <!-- Bootstrap JS and Custom Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Data for charts (Placeholder - to be replaced by API calls)
        const growthData = {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct'],
            datasets: [
                {
                    label: 'MRR ($K)',
                    data: [5, 7, 9, 11, 13, 15, 16, 17, 18.5, 20],
                    borderColor: 'var(--neon-blue)',
                    backgroundColor: 'rgba(0, 212, 255, 0.1)',
                    yAxisID: 'y',
                    tension: 0.4,
                    fill: true
                },
                {
                    label: 'SSE Score',
                    data: [55, 60, 65, 70, 72, 75, 76, 77, 78, 80],
                    borderColor: 'var(--neon-gold)',
                    backgroundColor: 'rgba(251, 191, 36, 0.1)',
                    yAxisID: 'y1',
                    tension: 0.4,
                    fill: false
                }
            ]
        };

        const esgData = {
            labels: ['Q1 2024', 'Q2 2024', 'Q3 2024', 'Q4 2024'],
            datasets: [
                {
                    label: 'Carbon Reduction (%)',
                    data: [-5, -8, -10, -12.5],
                    backgroundColor: 'var(--success-green)',
                    borderColor: 'var(--success-green)',
                    borderWidth: 1,
                    type: 'bar'
                },
                {
                    label: 'SDG Score (out of 5)',
                    data: [3.5, 3.8, 4.0, 4.2],
                    borderColor: 'var(--neon-blue)',
                    backgroundColor: 'rgba(0, 212, 255, 0.2)',
                    yAxisID: 'y1',
                    tension: 0.4,
                    fill: false
                }
            ]
        };

        const chartOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    labels: {
                        color: 'var(--text-secondary)'
                    }
                }
            },
            scales: {
                x: {
                    grid: { color: 'rgba(255, 255, 255, 0.1)' },
                    ticks: { color: 'var(--text-secondary)' }
                },
                y: {
                    type: 'linear',
                    display: true,
                    position: 'left',
                    grid: { color: 'rgba(255, 255, 255, 0.1)' },
                    ticks: { color: 'var(--text-secondary)' },
                    title: {
                        display: true,
                        text: 'MRR ($K)',
                        color: 'var(--neon-blue)'
                    }
                },
                y1: {
                    type: 'linear',
                    display: true,
                    position: 'right',
                    grid: { drawOnChartArea: false },
                    ticks: { color: 'var(--neon-gold)' },
                    title: {
                        display: true,
                        text: 'SSE Score',
                        color: 'var(--neon-gold)'
                    },
                    min: 0,
                    max: 100
                }
            }
        };

        // Initialize Charts
        document.addEventListener('DOMContentLoaded', () => {
            // 1. Growth Trajectory Chart
            new Chart(
                document.getElementById('growthChart'),
                {
                    type: 'line',
                    data: growthData,
                    options: chartOptions
                }
            );

            // 2. ESG Impact Chart
            new Chart(
                document.getElementById('esgImpactChart'),
                {
                    type: 'bar',
                    data: esgData,
                    options: {
                        ...chartOptions,
                        scales: {
                            x: {
                                grid: { color: 'rgba(255, 255, 255, 0.1)' },
                                ticks: { color: 'var(--text-secondary)' }
                            },
                            y: {
                                type: 'linear',
                                display: true,
                                position: 'left',
                                grid: { color: 'rgba(255, 255, 255, 0.1)' },
                                ticks: { color: 'var(--text-secondary)' },
                                title: {
                                    display: true,
                                    text: 'Reduction (%)',
                                    color: 'var(--success-green)'
                                }
                            },
                            y1: {
                                type: 'linear',
                                display: true,
                                position: 'right',
                                grid: { drawOnChartArea: false },
                                ticks: { color: 'var(--neon-blue)' },
                                title: {
                                    display: true,
                                    text: 'SDG Score',
                                    color: 'var(--neon-blue)'
                                },
                                min: 0,
                                max: 5
                            }
                        }
                    }
                }
            );
            
            // SSE Score Circle Logic (Dynamically update conic-gradient based on score)
            const score = parseInt(document.getElementById('sseScoreDisplay').textContent);
            const degrees = (score / 100) * 360;
            const sseCircle = document.getElementById('sseCircle');
            sseCircle.style.background = `conic-gradient(var(--neon-blue) 0deg, var(--neon-blue) ${degrees}deg, var(--accent-bg) ${degrees}deg)`;
        });
    </script>
