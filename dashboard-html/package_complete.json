{
  "name": "auxeira-user-centric-ai-dashboard",
  "version": "2.0.0",
  "description": "Complete user-centric AI dashboard system with CRM integration, Story Studio, and premium monetization",
  "main": "user_centric_ai_system.js",
  "scripts": {
    "start": "node user_centric_ai_system.js",
    "dev": "nodemon user_centric_ai_system.js",
    "test": "jest --coverage",
    "lint": "eslint .",
    "build": "npm install && npm run lint && npm run test",
    "deploy": "pm2 start user_centric_ai_system.js --name auxeira-ai-dashboard",
    "setup": "node setup.js",
    "migrate": "node migrations/migrate.js",
    "seed": "node seeds/seed.js"
  },
  "keywords": [
    "ESG",
    "AI",
    "dashboard",
    "SDG",
    "sustainable development",
    "impact investing",
    "claude",
    "grok",
    "manus",
    "nanogpt5",
    "hubspot",
    "salesforce",
    "story-studio",
    "drag-drop",
    "paystack"
  ],
  "author": "Auxeira Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "redis": "^4.6.10",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "firebase-admin": "^11.11.1",
    "isomorphic-dompurify": "^2.6.0",
    "cheerio": "^1.0.0-rc.12",
    "node-cron": "^3.0.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "html-pdf": "^3.0.1",
    "puppeteer": "^21.5.2",
    "socket.io": "^4.7.4",
    "express-validator": "^7.0.1",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-linkedin-oauth2": "^2.0.0",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "stripe": "^14.7.0",
    "paystack": "^2.0.1",
    "aws-sdk": "^2.1489.0",
    "cloudinary": "^1.41.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.3",
    "sequelize": "^6.35.1",
    "pg": "^8.11.3",
    "mysql2": "^3.6.5",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "pm2": "^5.3.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "@types/node": "^20.9.2",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bursarynetwork007/auxeira-backend.git"
  },
  "bugs": {
    "url": "https://github.com/bursarynetwork007/auxeira-backend/issues"
  },
  "homepage": "https://auxeira.com",
  "eslintConfig": {
    "extends": ["airbnb-base"],
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "indent": ["error", 2],
      "quotes": ["error", "single"],
      "semi": ["error", "always"]
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "6.0.0"
    }
  }
}
