    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function updateTierRecommendation() {
            const fundingRaised = parseInt(document.querySelector('input[placeholder*="500000"]').value) || 0;
            const mrr = parseInt(document.querySelector('input[placeholder*="25000"]').value) || 0;
            const teamSize = parseInt(document.querySelector('input[placeholder*="15"]').value) || 0;

            let recommendedTier = 'Founder';
            let tierClass = 'tier-founder';
            let description = '';

            if (fundingRaised >= 5000000 || mrr >= 100000 || teamSize >= 50) {
                recommendedTier = 'SCALE';
                tierClass = 'tier-scale';
                description = 'Based on your metrics, you qualify for the <strong>SCALE</strong> tier ($999/month). Your significant funding, high MRR, and large team position you for enterprise-grade features.';
            } else if (fundingRaised >= 500000 || mrr >= 25000 || teamSize >= 15) {
                recommendedTier = 'GROWTH';
                tierClass = 'tier-growth';
                description = 'Based on your metrics, you qualify for the <strong>GROWTH</strong> tier ($499/month). Your MRR and team size align perfectly with this tier.';
            } else if (fundingRaised >= 10000 || mrr >= 5000 || teamSize >= 5) {
                recommendedTier = 'STARTUP';
                tierClass = 'tier-startup';
                description = 'Based on your metrics, you qualify for the <strong>STARTUP</strong> tier ($149/month). This tier provides essential tools for early-stage growth.';
            } else {
                recommendedTier = 'FOUNDER';
                tierClass = 'tier-founder';
                description = 'Based on your metrics, you qualify for the <strong>FOUNDER</strong> tier (FREE). This tier is perfect for pre-revenue startups.';
            }

            document.getElementById('tierRecommendation').innerHTML = `
                <h6><i class="fas fa-lightbulb me-2"></i>Recommended Tier</h6>
                <p>${description}</p>
            `;
        }

        function calculateMetrics() {
            // Get input values
            const arpa = parseFloat(document.getElementById('arpa').value) || 0;
            const retention = parseFloat(document.getElementById('retention').value) || 1;
            const acqSpend = parseFloat(document.getElementById('acqSpend').value) || 0;
            const newCustomers = parseFloat(document.getElementById('newCustomers').value) || 1;
            const totalCash = parseFloat(document.getElementById('totalCash').value) || 0;
            const burnRate = parseFloat(document.getElementById('burnRate').value) || 1;

            // Calculate LTV
            const ltv = arpa * retention;

            // Calculate CAC
            const cac = acqSpend / newCustomers;

            // Calculate LTV:CAC Ratio
            const ltvCacRatio = (ltv / cac).toFixed(1);

            // Calculate Runway
            const runway = (totalCash / burnRate).toFixed(1);

            // Update display
            document.getElementById('ltv').textContent = '$' + ltv.toLocaleString('en-US', {maximumFractionDigits: 0});
            document.getElementById('cac').textContent = '$' + cac.toLocaleString('en-US', {maximumFractionDigits: 0});
            document.getElementById('ltvCacRatio').textContent = ltvCacRatio + ':1';
            document.getElementById('runway').textContent = runway + ' months';
        }

        // Initialize calculations on page load
        window.addEventListener('DOMContentLoaded', function() {
            calculateMetrics();
            updateTierRecommendation();
        });
    </script>
