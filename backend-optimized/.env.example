# Auxeira Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================
# API Keys (NEVER hardcode these in frontend)
# ============================================

# Paystack Payment Gateway
PAYSTACK_PUBLIC_KEY=pk_test_your_key_here
PAYSTACK_SECRET_KEY=sk_test_your_secret_here

# OpenAI / AI Services
OPENAI_API_KEY=your_openai_key_here

# AWS Services (if applicable)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ============================================
# Backend Configuration
# ============================================

# API Base URL
API_BASE_URL=http://localhost:3000
BACKEND_URL=http://localhost:3000

# Environment
NODE_ENV=development

# Server Port
PORT=3000

# ============================================
# Database Configuration
# ============================================

# DynamoDB (if using AWS)
DYNAMODB_TABLE_PREFIX=auxeira_

# MongoDB (if migrating to MongoDB)
MONGODB_URI=mongodb://localhost:27017/auxeira

# ============================================
# Authentication
# ============================================

# JWT Secret
JWT_SECRET=your_jwt_secret_here_change_in_production

# Session Secret
SESSION_SECRET=your_session_secret_here

# ============================================
# External Services
# ============================================

# Stripe (if using)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret

# SendGrid / Email Service
SENDGRID_API_KEY=your_sendgrid_key
FROM_EMAIL=noreply@auxeira.com

# ============================================
# Feature Flags
# ============================================

ENABLE_AI_FEATURES=true
ENABLE_BLOCKCHAIN=false
ENABLE_ANALYTICS=true

# ============================================
# Security
# ============================================

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Logging
# ============================================

LOG_LEVEL=info
LOG_FILE=logs/auxeira.log

