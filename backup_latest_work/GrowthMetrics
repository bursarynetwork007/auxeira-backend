                data: ltvCacData,
                options: chartOptions
            });
        });

        // Simulation Functions
        function updateSimulation() {
            const cacReduction = parseInt(document.getElementById('cacReduction').value);
            const mrrGrowth = parseInt(document.getElementById('mrrGrowth').value);
            const churnReduction = parseFloat(document.getElementById('churnReduction').value);

            document.getElementById('cacValue').textContent = cacReduction;
            document.getElementById('mrrValue').textContent = mrrGrowth;
            document.getElementById('churnValue').textContent = churnReduction.toFixed(1);
        }

        function runFullSimulation() {
            const cacReduction = parseInt(document.getElementById('cacReduction').value);
            const mrrGrowth = parseInt(document.getElementById('mrrGrowth').value);
            const churnReduction = parseFloat(document.getElementById('churnReduction').value);

            const currentCAC = 127;
            const currentMRR = 18500;
            const currentLTV = 1890;
            const currentLtvCac = 14.9;
            const currentSeriesA = 78;

            const newCAC = currentCAC * (1 - cacReduction / 100);
            const newMRR = currentMRR * (1 + mrrGrowth / 100);
            const newLTV = currentLTV * (1 + (mrrGrowth / 100) * 0.5);
            const newLtvCac = newLTV / newCAC;
            const seriesABoost = (cacReduction * 0.2) + (mrrGrowth * 0.15) + (churnReduction * 5);
            const newSeriesA = Math.min(100, currentSeriesA + seriesABoost);

            document.getElementById('projectedMRR').textContent = '$' + Math.round(newMRR);
            document.getElementById('mrrGrowthPercent').textContent = '+' + mrrGrowth + '%';
            document.getElementById('projectedLtvCac').textContent = newLtvCac.toFixed(1) + ':1';
            document.getElementById('ltvCacChange').textContent = '+' + (newLtvCac - currentLtvCac).toFixed(1) + ' points';
            document.getElementById('projectedSeriesA').textContent = Math.round(newSeriesA) + '%';
            document.getElementById('seriesAChange').textContent = '+' + Math.round(seriesABoost) + '%';

            document.getElementById('simulationResults').style.display = 'block';
        }
    </script>
</body>
</html>
